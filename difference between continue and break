t = 3
for x in range(t):
    if x ==1:
        continue   #跳出本次循环，进入下一段循环
    print(x)#不要符合条件的，其他的都要
   
for x in range(6):
    print('######',x)
    for y in range(6):
        if y >3:
            break #结束当前循环，但是其他循环依旧不变/结束小循环，大循环不变
        print(y)
